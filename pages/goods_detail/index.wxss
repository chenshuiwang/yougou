/* pages/goods_detail/index.wxss */
.container{
  overflow: auto;
  padding-bottom: 100rpx;
}
.swiper{
  height: 750rpx;
}
.swiper image{
  width: 750rpx;
  height: 750rpx;
}
.price{
  color: red;
  height: 100rpx;
  padding: 0 20rpx;
  font-size: 20px;
  line-height: 100rpx;
}
.star{
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  color: #343434;
}
.star .introduce{
  width: 600rpx;
  text-overflow: ellipsis;
  white-space: normal;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.star .shoucang{
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #ddd;
  color: #999;
}
.kuai-di{
  height: 100rpx;
  line-height: 100rpx;
  color: #9a999a;
  border-bottom: 20rpx solid #ddd;
  padding: 0 20rpx;
  font-size: 13px;
}
.manjian{
  padding: 20rpx;
  color: #343434;
}
.manjian text{
  color: red;
  padding-left: 50rpx;
}
.tab{
  width: 710rpx;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  color: #333;
  border-top: 10px solid #eee;
}
.tab view{
  width: 50%;
  text-align: center;
}
.tab .active{
  background-color: orange;
  color: #fff;
}
.richText,.goods-detail{
  padding: 0 20rpx;
  font-size: 13px;
}
.bottom{
  width: 750rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0
}
.bottom-left{
  width: 40%;
  display: flex;
  background-color: #fff;
}
.bottom-left .btn{
  position: absolute;
  background-color: red;
  width: 20%;
  height: 100%;
  overflow: hidden;
  opacity: 0;
}
.bottom-left .btn button{
  width: 100%;
  height: 100%;
}
.bottom-left .kefu{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  width: 50%;
}
.bottom-right{
  display: flex;
  width: 60%;
}
.bottom-right .addCar,.bottom-right .pay{
  width: 50%;
  height: 100%;
  color: #fff;
  border: none;
  border-radius: 0;
  line-height: 100rpx;
  text-align: center;
  font-size: 14px;
}
.bottom-right .addCar {
  background-color: orange;
}
.bottom-right .pay {
  background-color: red;
}
