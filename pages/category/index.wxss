/* pages/category/index.wxss */
.search{
  padding: 20rpx;
  background-color: #ff2d4a;
}
.search .search-inp{
  height: 60rpx;
  background-color: #fff;
  width: 100%;
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #999;
}
.search .search-inp icon{
  margin-right: 5px;
}
.container{
  width: 750rpx;
  display: flex;
  justify-content: space-between;
}
.container-left{
  width: 200rpx;
}
.container-left view{
  width: 100%;
  height: 100rpx;
  color: #333;
  text-align: center;
  line-height: 100rpx;
  background-color: #f5f5f5;
  border-bottom: 1px solid #ddd;
  font-size: 28rpx;
}
.container-left .active{
  background-color: #fff;
  color: #ff2d4a;
}
.container-right{
  flex: 1;
}