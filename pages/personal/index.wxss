/* pages/personal/index.wxss */
page{
  background-color: #f5f5f5;
}
.top-container{
  height: 410rpx;
  background-color: #ff2d4a;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top{
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #fff;
}
.top .login .pic{
  width: 120rpx;
  height: 120rpx;
  padding: 1px;
  border-radius: 50%;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.top .login{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 30rpx;
}
.top .login image{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}